<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- STYLE FOR MAIN ACTIVITY -->
    <style name="AppTheme.NoTitle" parent="Theme.Go4Lunch">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.Go4Lunch">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <!--Restaurant Detail-->
    <style name="RestaurantDetailsAction" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="drawableTint">?attr/colorPrimary</item>
    </style>
    <style name="Theme.Go4Lunch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.Go4Lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Go4Lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- drawer style -->
    <style name="header_nav">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:layout_marginBottom">@dimen/margin_25</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- detail page style -->
    <style name="detail_text_style">
        <item name="android:layout_marginStart">@dimen/margin_start_10</item>
        <item name="android:layout_marginTop">@dimen/margin_top_15</item>
        <item name="android:textColor">@color/quantum_white_100</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="text_adress_style">
        <item name="android:layout_margin">@dimen/margin_start_10</item>
        <item name="android:layout_marginStart">@dimen/margin_top_20</item>
        <item name="android:layout_marginTop">@dimen/margin_top_15</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_style_button_detail">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- item -->
    <style name="item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="item_text_open">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="distance_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="item_workers_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="stars">
        <item name="android:layout_height">@dimen/image_button_20</item>
        <item name="android:layout_width">@dimen/image_button_20</item>
        <item name="android:src">@drawable/ic_yellow_star_32dp</item>
    </style>

    <!-- workers -->
    <style name="worker_image">
        <item name="android:layout_width">@dimen/image_button_50</item>
        <item name="android:layout_height">@dimen/image_button_50</item>
        <item name="android:layout_marginStart">@dimen/margin_fab_16</item>
        <item name="android:layout_marginTop">@dimen/margin_start_10</item>
        <item name="android:layout_marginBottom">@dimen/margin_start_10</item>
    </style>
    <style name="worker_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_top_20</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <declare-styleable name="MaterialSearchBar">
        //Base
        <attr format="boolean" name="mt_speechMode"/>
        <attr format="integer" name="mt_maxSuggestionsCount"/>
        <attr format="boolean" name="mt_navIconEnabled"/>
        <attr format="boolean" name="mt_roundedSearchBarEnabled"/> //(API 21+ , Will Revert To Default Shape On Lower
        <attr format="boolean" name="mt_menuDividerEnabled"/>
        <attr format="color" name="mt_dividerColor"/>
        <attr format="color" name="mt_searchBarColor"/>

        //Icons
        <attr format="reference" name="mt_menuIconDrawable"/>
        <attr format="reference" name="mt_searchIconDrawable"/>
        <attr format="reference" name="mt_speechIconDrawable"/>
        <attr format="reference" name="mt_backIconDrawable"/>
        <attr format="reference" name="mt_clearIconDrawable"/>
        <attr format="color" name="mt_navIconTint"/>
        <attr format="color" name="mt_menuIconTint"/>
        <attr format="color" name="mt_searchIconTint"/>
        <attr format="color" name="mt_backIconTint"/>
        <attr format="color" name="mt_clearIconTint"/>
        <attr format="boolean" name="mt_navIconUseTint"/>
        <attr format="boolean" name="mt_menuIconUseTint"/>
        <attr format="boolean" name="mt_searchIconUseTint"/>
        <attr format="boolean" name="mt_backIconUseTint"/>
        <attr format="boolean" name="mt_clearIconUseTint"/>
        <attr format="boolean" name="mt_borderlessRippleEnabled"/>

        //Text
        <attr format="string" name="mt_hint"/>
        <attr format="string" name="mt_placeholder"/>
        <attr format="color" name="mt_textColor"/>
        <attr format="color" name="mt_hintColor"/>
        <attr format="color" name="mt_placeholderColor"/>
        <attr format="color" name="mt_textCursorTint"/>
        <attr format="reference" name="mt_leftTextSelectorDrawable"/>
        <attr format="reference" name="mt_middleTextSelectorDrawable"/>
        <attr format="reference" name="mt_rightTextSelectorDrawable"/>
        <attr format="color" name="mt_leftTextSelectorTint"/>
        <attr format="color" name="mt_middleTextSelectorTint"/>
        <attr format="color" name="mt_rightTextSelectorTint"/>
        <attr format="boolean" name="mt_handlesTintEnabled"/>
        <attr format="color" name="mt_highlightedTextColor"/>
    </declare-styleable>

</resources>